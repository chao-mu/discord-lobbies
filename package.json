{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "dojo-pairer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run generate-commands && tsc && tsc-alias",
    "build:watch": "nodemon --exec 'npm run build' --watch src --watch scripts --watch .env --delay 2s",
    "start:watch": "nodemon build/index.js --verbose --watch .env --watch build --delay 2s",
    "generate-commands": "./scripts/generate-commands.sh",
    "dev": "concurrently \"npm run start:watch\" \"npm run generate-commands:watch\" \"npm run build:watch\"",
    "lint": "prettier --check src && eslint --ext .ts src",
    "lint:fix": "prettier --write src && eslint --ext .ts --fix src",
    "start": "node build/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "npm run build && node build/db/migrate.js",
    "db:seed": "npm run build && node build/db/seed.js",
    "db:catchup": "npm run build && npm run db:generate && node build/db/migrate.js && node build/db/seed.js"
  },
  "dependencies": {
    "@discordjs/core": "^1.1.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.4",
    "moment": "^2.30.1",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=21.1.0"
  }
}

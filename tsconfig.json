{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@sapphire/ts-config/extra-strict",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "outDir": "dist",
    "skipLibCheck": true
  }
}
